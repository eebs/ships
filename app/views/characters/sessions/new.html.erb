<% provide(:title, 'Sign In') %>
<div class="row">
  <div class="span4 offset4">
    <h2>Sign In</h2>

    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
      <%= f.input :name, :label => 'Character Name' %>
      <%= f.input :password %>

      <% if devise_mapping.rememberable? %>
        <%= f.input :remember_me, :label => false, inline_label: 'Remember me', :as => :boolean %>
      <% end %>

      <%= f.error :base %>
      <%= f.submit 'Sign In', :class => 'btn btn-primary btn-large' %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>