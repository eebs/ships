<div class="reservation-comment">
  <div class="media">
    <span class="pull-left">
      <%= character_image_tag current_character.characterid, 64, {:height => 48, :width => 48} %>
    </span>
    <div class="media-body">
      <div class="res-comment-container-outer">
        <div class="res-comment-container">
          <div class="res-comment-header">
            <a href="/admin/characters/1" class="res-comment-header-author"><%= comment.character.name %></a>
            <span>commented</span>
            <span class="res-comment-header-right">
              <span class="res-comment-header-datetime"><%= time_ago_in_words(comment.created_at) %> ago</span>
            </span>
          </div>
          <div class="res-comment-content"><%= simple_format comment.body %></div>
        </div>
      </div>
    </div>
  </div>
</div>
