<table class="table table-striped">
    <thead>
        <tr>
        <th>Next Due</th>
        <th>Ship</th>
        <th>#</th>
        <th>Status</th>
        <th>Start Date</th>
        <% if character_signed_in? && (can? :manage, Run) %>
            <th>Notes</th>
        <% end %>
        </tr>
    </thead>
    <tbody>
    <% @progress.each do |run| %>
      <tr>
        <td><%= 
            unless run.next_due.empty?
                Time.zone.parse(run.next_due).to_formatted_s(:short)
            end
        %></td>
        <td><%= run.ship.name %></td>
        <td><%= run.ship_number %></td>
        <td><%= run.status.name %></td>
        <td><%= 
            unless run.start_date.empty?
                Time.zone.parse(run.start_date).to_formatted_s(:short)
            end
        %></td>
        <% if character_signed_in? && (can? :manage, Run) %>
            <td><%= run.notes %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
</table>