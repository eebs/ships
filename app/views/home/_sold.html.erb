<table class="table table-striped">
    <thead>
        <tr>
            <th>Ship</th>
            <th>#</th>
            <th>Sell Price</th>
            <th>Start Date</th>
            <th>Sell Date</th>
            <% if character_signed_in? && (can? :manage, Run) %>
                <th>Notes</th>
            <% end %>
        </tr>
    </thead>
    <tbody>
    <% @sold.each do |run| %>
        <tr>
            <td><%= run.ship.name %></td>
            <td><%= run.ship_number %></td>
            <td><%= number_to_currency(run.sell_price) if run.sell_price %></td>
            <td><%= 
                unless run.start_date.empty?
                    Time.zone.parse(run.start_date).to_formatted_s(:short)
                end
            %></td>
            <td><%= 
                unless run.sell_date.empty?
                    Time.zone.parse(run.sell_date).to_formatted_s(:short)
                end
            %></td>
            <% if character_signed_in? && (can? :manage, Run) %>
                <td><%= run.notes %></td>
            <% end %>
        </tr>
    <% end %>
    </tbody>
</table>