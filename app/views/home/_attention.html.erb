<table class="table">
    <thead>
        <tr>
        <th>Next Due</th>
        <th>Ship</th>
        <th>#</th>
        <th>Status</th>
        <th>Sell Price</th>
        <th>Notes</th>
        <% if user_signed_in? && (can? :manage, Run) %>
        <th>Modify</th>
        <% end %>
        </tr>
    </thead>
    <tbody>
    <% @attention.each do |run| %>
      <tr style="background-color: <%= run.status.color %>">
        <td><%= 
            unless run.next_due.empty?
                Time.zone.parse(run.next_due).to_formatted_s(:short)
            end
        %></td>
        <td><%= run.ship.name %></td>
        <td><%= run.ship_number %></td>
        <td><%= run.status.name %></td>
        <td><%= number_to_currency(run.sell_price) if run.sell_price %></td>
        <td><%= run.notes %></td>
        <% if user_signed_in? && (can? :manage, Run) %>
            <td>
            <div class="btn-toolbar">
              <div class="btn-group">
                <a class="btn btn-small" href=<%= edit_run_url(run) %>><i class="icon-edit"></i></a>
                <%= link_to raw('<i class="icon-remove"></i>'), run, class: 'btn btn-small', method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            </div>
          </td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
</table>