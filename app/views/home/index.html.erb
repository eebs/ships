<h3>Needs Attention</h3>
<span>Now: <%= @now.to_formatted_s(:long) %></span>
<hr/>

<% unless @attention.empty? %>
    <%= render 'home/attention' %>
<% else %>
    No ships need attention
<% end %>

<h3>In Progress</h3>

<% unless @progress.empty? %>
    <%= render 'home/progress' %>
<% else %>
    No ships in progress
<% end %>

<h3>Sold</h3>

<% unless @sold.empty? %>
    <%= render 'home/sold' %>
<% else %>
    No ships sold
<% end %>