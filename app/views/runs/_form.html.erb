<%= form_for(@run) do |f| %>
  <% if @run.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@run.errors.count, "error") %> prohibited this run from being saved:</h2>

      <ul>
      <% @run.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :next_due %><br />
    <%= f.datetime_select :next_due %>
  </div>
  <div class="field">
    <%= f.label :ship %><br />
    <%= collection_select :run, :ship_id, Ship.all, :id, :name, :prompt => true %>
  </div>
  <div class="field">
    <%= f.label :ship_number %><br />
    <%= f.number_field :ship_number %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= collection_select :run, :status_id, Status.all, :id, :name, :prompt => true %>
  </div>
  <div class="field">
    <%= f.label :sell_price %><br />
    <%= f.text_field :sell_price %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br />
    <%= f.datetime_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :sell_date %><br />
    <%= f.datetime_select :sell_date %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
