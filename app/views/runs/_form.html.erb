<%= form_for(@run) do |f| %>
  <% if @run.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@run.errors.count, "error") %> prohibited this run from being saved:</h2>

      <ul>
      <% @run.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :next_due %>
    <%= f.text_field :next_due %>
  </div>
  <div class="field">
    <%= f.label :ship %>
    <%= collection_select :run, :ship_id, Ship.all, :id, :name, :prompt => true %>
  </div>
  <div class="field">
    <%= f.label :ship_number %>
    <%= f.number_field :ship_number %>
  </div>
  <div class="field">
    <%= f.label :status %>
    <%= collection_select :run, :status_id, Status.all, :id, :name, :prompt => true %>
  </div>
  <div class="field">
    <%= f.label :sell_price %>
    <%= f.text_field :sell_price %>
  </div>
  <div class="field">
    <%= f.label :start_date %>
    <%= f.text_field :start_date %>
  </div>
  <div class="field">
    <%= f.label :sell_date %>
    <%= f.text_field :sell_date %>
  </div>
  <div class="field">
    <%= f.label :notes %>
    <%= f.text_area :notes %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-primary btn-large' %>
  </div>
<% end %>
