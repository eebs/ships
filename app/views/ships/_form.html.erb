<%= simple_form_for(@ship, :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>
  <%= f.error :base, :class => 'error-base' %>

  <%= f.input :name %>
  <%= f.input :ship_type %>
  <%= f.input :type_id, :label => 'Type ID' %>
  <%= f.input :finish_time %>
  <%= f.button :submit, :class => 'btn btn-primary' %>
<% end %>
